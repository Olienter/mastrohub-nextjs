{
  "name": "mastrohub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:report": "jest --coverage --coverageReporters=html --coverageReporters=text",
    "quality:analyze": "npm run lint && npm run type-check",
    "quality:security": "npm audit && npm audit fix",
    "quality:performance": "lighthouse http://localhost:3000 --output=json --output-path=./performance-results/lighthouse.json",
    "quality:report": "npm run quality:analyze && npm run quality:security && npm run quality:performance",
    "docker:build": "docker build -t mastrohub-nextjs .",
    "docker:run": "docker run -p 3000:3000 mastrohub-nextjs",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:restart": "docker-compose restart",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:production": "./scripts/deploy.sh production",
    "backup:full": "./scripts/backup.sh full",
    "backup:database": "./scripts/backup.sh database",
    "backup:files": "./scripts/backup.sh files",
    "backup:app": "./scripts/backup.sh app",
    "monitoring:start": "docker-compose -f docker-compose.monitoring.yml up -d",
    "monitoring:stop": "docker-compose -f docker-compose.monitoring.yml down",
    "monitoring:logs": "docker-compose -f docker-compose.monitoring.yml logs -f",
    "ssl:generate": "openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout ssl/key.pem -out ssl/cert.pem",
    "ssl:setup": "mkdir -p ssl && npm run ssl:generate",
    "health:check": "curl -f http://localhost:3000/api/health",
    "logs:view": "docker-compose logs -f app",
    "logs:clear": "docker-compose logs --tail=0 app",
    "clean:docker": "docker system prune -f",
    "clean:images": "docker image prune -f",
    "clean:volumes": "docker volume prune -f",
    "clean:all": "npm run clean:docker && npm run clean:images && npm run clean:volumes",
    "setup:dev": "npm install && npm run ssl:setup && npm run docker:compose",
    "setup:prod": "npm install --production && npm run ssl:setup && npm run docker:compose",
    "update:all": "npm update && npm run docker:build",
    "restart:app": "docker-compose restart app",
    "restart:all": "docker-compose restart",
    "status": "docker-compose ps",
    "logs:all": "docker-compose logs",
    "logs:nginx": "docker-compose logs nginx",
    "logs:redis": "docker-compose logs redis",
    "logs:postgres": "docker-compose logs postgres",
    "logs:prometheus": "docker-compose logs prometheus",
    "logs:grafana": "docker-compose logs grafana"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/bundle-analyzer": "^15.4.4",
    "@next/mdx": "^15.4.4",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/qrcode": "^1.5.5",
    "clsx": "^2.1.1",
    "framer-motion": "^10.18.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.294.0",
    "next": "15.4.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "qrcode": "^1.5.4",
    "react": "^18",
    "react-dom": "^18",
    "react-window": "^1.8.8",
    "recharts": "^3.1.0",
    "redis": "^4.6.13",
    "swr": "^2.3.4",
    "web-vitals": "^3.5.0",
    "zod": "^4.0.14",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.9",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^4.0.0",
    "typescript": "^5"
  }
}
